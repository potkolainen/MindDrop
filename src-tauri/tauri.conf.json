{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MindDrop",
  "version": "0.1.0",
  "identifier": "com.minddrop.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "shortDescription": "",
    "longDescription": "",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "MindDrop",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:event:allow-listen",
            "core:event:allow-emit",
            "shell:allow-open"
          ]
        },
        {
          "identifier": "search-window-capability",
          "description": "Capability for assistive search windows",
          "windows": ["search-window"],
          "permissions": [
            "core:default",
            "core:event:allow-listen",
            "core:event:allow-emit",
            "core:window:allow-close",
            "core:webview:allow-webview-close"
          ]
        }
      ]
    }
  },
  "plugins": {}
}
